<Page x:Class="pract7.Pages.CreatePatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:validation="clr-namespace:pract7.ValidationRules"
      Title="Новый пациент"
      Width="290"
      Height="220"
      Background="{DynamicResource WindowBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="190"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Фамилия:" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="LastNameBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}">
            <TextBox.Text>
                <Binding Path="LastName" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:RequiredValidationRule FieldName="Фамилия"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <Label Grid.Row="1" Grid.Column="0" Content="Имя:" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="FirstNameBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}">
            <TextBox.Text>
                <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:RequiredValidationRule FieldName="Имя"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <Label Grid.Row="2" Grid.Column="0" Content="Отчество:" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="MiddleNameBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Дата рождения:" Style="{StaticResource DefaultLabelStyle}"/>
        <DatePicker x:Name="BirthdayPicker" Grid.Row="3" Grid.Column="1" Style="{StaticResource DefaultDatePickerStyle}"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Телефон:" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="PhoneBox" Grid.Row="4" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}">
            <TextBox.Text>
                <Binding Path="PhoneNumber" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:PhoneNumberValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <Button Grid.Row="5" Grid.Column="1" Content="Сохранить" Click="SaveButton_Click" 
                Style="{StaticResource AddButtonStyle}" HorizontalAlignment="Left" />
        <Button Grid.Row="5" Grid.Column="1" Content="Назад" Click="BackButton_Click" 
                Style="{StaticResource StandardButtonStyle}" HorizontalAlignment="Right" />
    </Grid>
</Page>