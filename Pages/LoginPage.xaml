<Page x:Class="pract7.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource WindowBackground}"
      Title="Вход"
      Height="170"
      Width="310">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="210"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Content="Вход в систему"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Style="{StaticResource BoldLabelStyle}"
               FontSize="16"/>

        <Label Grid.Row="1" Grid.Column="0" Content="ID врача:" HorizontalAlignment="Right" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="DoctorIdBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Пароль:" HorizontalAlignment="Right" Style="{StaticResource DefaultLabelStyle}"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource DefaultPasswordBoxStyle}"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Войти" Click="LoginButton_Click" Style="{StaticResource StandardButtonStyle}"/>
            <Button Content="Регистрация" Click="RegisterButton_Click" Style="{StaticResource StandardButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>