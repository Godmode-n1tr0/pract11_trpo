<Page x:Class="pract7.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация"
      Background="{DynamicResource WindowBackground}"
      Height="350"
      Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Content="Регистрация врача"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Style="{StaticResource BoldLabelStyle}"
               FontSize="16"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Фамилия:" HorizontalAlignment="Right" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="LastNameBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Имя:" HorizontalAlignment="Right" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="FirstNameBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Отчество:" HorizontalAlignment="Right" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="MiddleNameBox" Grid.Row="3" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Специализация:" HorizontalAlignment="Right" Style="{StaticResource DefaultLabelStyle}"/>
        <ComboBox x:Name="SpecBox" Grid.Row="4" Grid.Column="1" Style="{StaticResource DefaultComboBoxStyle}">
            <ComboBoxItem>Хирург</ComboBoxItem>
            <ComboBoxItem>Терапевт</ComboBoxItem>
            <ComboBoxItem>Стоматолог</ComboBoxItem>
            <ComboBoxItem>Педиатр</ComboBoxItem>
        </ComboBox>

        <Label Grid.Row="5" Grid.Column="0" Content="Пароль:" HorizontalAlignment="Right" Style="{StaticResource DefaultLabelStyle}"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="5" Grid.Column="1" Style="{StaticResource DefaultPasswordBoxStyle}"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Повторите:" HorizontalAlignment="Right" Style="{StaticResource DefaultLabelStyle}"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="6" Grid.Column="1" Style="{StaticResource DefaultPasswordBoxStyle}"/>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Зарегистрироваться"
                    Click="RegisterButton_Click"
                    Style="{StaticResource AddButtonStyle}"/>
            <Button Content="Назад"
                    Click="BackButton_Click"
                    Style="{StaticResource StandardButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>