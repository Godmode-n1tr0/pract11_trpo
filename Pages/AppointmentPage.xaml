<Page x:Class="pract7.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:pract7.Converters"
      Background="{DynamicResource WindowBackground}"
      Title="Прием"
      Width="450"
      Height="430">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="325"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Пациент:" Style="{StaticResource DefaultLabelStyle}"/>
        <Label Grid.Row="0" Grid.Column="1" x:Name="PatientLabel" Style="{StaticResource BoldLabelStyle}"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Возраст:" Style="{StaticResource DefaultLabelStyle}"/>
        <Label Grid.Row="1" Grid.Column="1" x:Name="AgeLabel" Style="{StaticResource DefaultLabelStyle}"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Последний прием:" Style="{StaticResource DefaultLabelStyle}"/>
        <Label Grid.Row="2" Grid.Column="1" x:Name="LastAppointmentLabel" Style="{StaticResource DefaultLabelStyle}"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Диагноз:" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="DiagnosisBox" Grid.Row="3" Grid.Column="1" Style="{StaticResource DefaultTextBoxStyle}" Width="200"/>

        <Label Grid.Row="4" Grid.Column="0" Content="История приемов:" Style="{StaticResource DefaultLabelStyle}"/>

        <ListView x:Name="HistoryList" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource DefaultListViewStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата" Width="140" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="Диагноз" Width="150" DisplayMemberBinding="{Binding Diagnosis}"/>
                    <GridViewColumn Header="Врач" Width="130" DisplayMemberBinding="{Binding DoctorId}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Grid.Row="6" Grid.Column="0" Content="Рекомендации:" Style="{StaticResource DefaultLabelStyle}"/>
        <TextBox x:Name="RecommendationsBox" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource AppointmentTextBoxStyle}" VerticalAlignment="Top"/>

        <Button Grid.Row="8" Grid.Column="0" Content="Сохранить" Click="SaveAppointment_Click" Style="{StaticResource StandardButtonStyle}" Width="110" Height="auto"/>
        <Button Grid.Row="8" Grid.Column="1" Content="Назад" Click="BackButton_Click" Style="{StaticResource StandardButtonStyle}" Width="100" Height="auto"/>
    </Grid>
</Page>