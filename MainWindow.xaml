<Window x:Class="pract7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно приема пациентов"
        Background="{DynamicResource WindowBackground}"
        Height="520"
        Width="850"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource PrimaryButton}"
                Height="40">
            <StackPanel Orientation="Horizontal"
                       VerticalAlignment="Center"
                       Margin="10,0">
                <TextBlock Text="Медицинская система"
                          Foreground="White"
                          FontSize="16"
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"/>

                <Separator Width="20" Background="Transparent"/>

                <Button Content="Сменить тему" 
                       Click="ChangeThemeButton_Click"
                       Style="{StaticResource MaterialOutlineButton}"
                       Foreground="White"
                       BorderBrush="White"
                       Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <Frame x:Name="MainFrame" 
              NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>